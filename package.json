{
  "name": "waffle-grid-layout",
  "version": "0.2.2",
  "description": "lightweight CSS Grid Layout",
  "style": "build/waffle.css",
  "sass": "src/waffle.scss",
  "main": "build/waffle.css",
  "directories": {
    "doc": "docs"
  },
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web",
    "grid"
  ],
  "files": [
    "build/*.{css,map}",
    "src/**/*.scss"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "yarn run watch & yarn run preview",
    "build": "sass src/waffle.scss build/waffle.css",
    "watch": "sass --watch src:build",
    "preview": "npx parcel ./demo/index.html",
    "build:docs": "yarn run build && npx parcel build ./demo/index.html --dist-dir docs/  --public-url https://mark24code.github.io/waffle/",
    "preview:docs": "yarn run build && npx parcel build ./demo/index.html --dist-dir docs/ && npx serve ./docs",
    "release": "standard-version",
    "release:major": "standard-version -- --release-as major",
    "release:minor": "standard-version -- --release-as minor",
    "release:patch": "standard-version -- --release-as patch"
  },
  "devDependencies": {
    "@parcel/transformer-image": "2.0.0-rc.0",
    "cssnano": "^5.0.7",
    "parcel": "^2.0.0-rc.0",
    "postcss": "^8.3.6",
    "sass": "1.37.5",
    "serve": "^12.0.0",
    "standard-version": "^9.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mark24Code/waffle.git"
  },
  "author": "Mark24",
  "bugs": {
    "url": "https://github.com/Mark24Code/waffle/issues"
  },
  "homepage": "https://github.com/Mark24Code/waffle#readme"
}
