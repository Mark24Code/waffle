{
  "name": "waffle-grid-layout",
  "version": "1.3.0",
  "description": "lightweight CSS Grid Layout",
  "style": "build/waffle.css",
  "sass": "src/waffle.scss",
  "main": "build/waffle.css",
  "directories": {
    "doc": "docs"
  },
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web",
    "grid"
  ],
  "files": [
    "build/*.{css,map}",
    "src/**/*.scss"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "yarn run watch & yarn run preview:docs",
    "build": "npx sass src/waffle.scss build/waffle.css",
    "watch": "npx sass --watch src:build",
    "preview:docs": "npx vite",
    "build:docs": "yarn run build && npx vite build --base=https://mark24code.github.io/waffle/",
    "release": "npx standard-version",
    "release:major": "npx standard-version -- --release-as major",
    "release:minor": "npx standard-version -- --release-as minor",
    "release:patch": "npx standard-version -- --release-as patch"
  },
  "devDependencies": {
    "sass": "1.37.5",
    "standard-version": "^9.3.1",
    "vite": "^2.4.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mark24Code/waffle.git"
  },
  "author": "Mark24",
  "bugs": {
    "url": "https://github.com/Mark24Code/waffle/issues"
  },
  "homepage": "https://github.com/Mark24Code/waffle#readme"
}
